<%= csrf_meta_tags %> <%= csp_meta_tag %>

<link href="/third-party/stylesheets/bootstrap.min.css" rel="stylesheet" async/>
<link href="/third-party/stylesheets/bootstrap-theme.min.css" rel="stylesheet" async/>
<link href="/third-party/stylesheets/magnific-popup.css" rel="stylesheet" async/> <%= stylesheet_link_tag 'application',
media: 'all' %>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script type="text/javascript" src="/third-party/javascripts/jquery.min.js" defer></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="/third-party/javascripts/bootstrap.min.js" defer></script>

<%= javascript_include_tag 'application' %>

<script type="text/javascript">
    function defer(method) {
        if (window.jQuery) {
            method();
        } else {
            setTimeout(function() { defer(method) }, 50);
        }
    }
</script>

<script type="text/javascript">
    let isProduction = <%= Rails.env.production? %>;

    if (isProduction && 'serviceWorker' in navigator) {
        navigator.serviceWorker.register('/sw.js');
    }

    
</script>